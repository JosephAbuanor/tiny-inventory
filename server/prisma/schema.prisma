generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Store {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id              String   @id @default(cuid())
  storeId         String
  name            String
  category        String
  price           Float
  quantityInStock Int
  createdAt       DateTime @default(now())
  store           Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
}
